{{!-- this is html for layout and replaces triple-bracketed body in main--}}
<div class="container-fluid" id="bg">
    <div class="card">
        <div class="card-body text-center">

            <div class="header">
                <h1><strong>Welcome to Eat-Da-Burger!</strong></h1>
                <<img src="img/slider.png" alt="burger" />>
                <br>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h5><strong>We have several recommendations, but you can build your own.</strong></h5>
                    <h5><em>Customize your order:</em></h5>
                </div>
            </div>

            <div class="row" id="your-burger">
                <div class="col-md-12">
                    <form class="burgerForm center">
                        <div class="form-group">
                            <label for="">
                            </label>
                            <input type="text" class="form-control" id="burgerName"
                                aria-describedby="your custom burger" placeholder="">
                        </div>
                        <button id="addburger" class="btn btn-add" type="submit">Add To The Menu!</button>
                        <br>
                    </form>
                    <hr>
                </div>
            </div>

        </div>

        <div class="row">
        <div class="col-md-6">
            <div class="card" id="menu">
                <div class="card-body text-left">
                    <h5><strong>On the menu: </strong></h5>
                    <hr>
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            {{this.burger_name}}
                            <button class="devourBurger" type="button" data-id="{{this.ID}}">GIMME NOW!</button>

                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card" id="menu">
                <div class="card-body text-left">
                    <h5><strong>On your plate: </strong></h5>
                    <hr>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <li>{{this.burger_name}}
                            <button class="unBurger" type="button" data-id="{{this.ID}}">YUM, AGAIN!!</button>
                        </li>

                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
